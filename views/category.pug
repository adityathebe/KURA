extends layout

block content
    .jumbotron
        h2(style="text-align: center") #{subject}
    hr
    ul.list-group
    each question in questions
        .container
            .row
                .well.well-sm
                    .card.text-left
                        .card-block
                            <a href="/questions/#{question._id}"><h4 class="card-title"> #{question.title}</h4></a>
                            ul.list-inline
                                <li class="card-subtitle mb-2 text-muted"><span class="badge"> #{question.category}</span> </li>
                                <li style="font-family: 'Pacifico';"><small>Votes : #{question.votes}</small></li>
                                li <small> Submitted on : #{question.createdAt.toLocaleDateString()}</small>
                            span.label.label-default #{question.author}
                            <hr>
                            p.card-text !{question.body.slice(0, 300)}
                            ul.list-inline
                                <li><small><button type="button" class="btn btn-info btn-sm">
                                    <a href="/questions/#{question._id}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>Answer</button></small></li></a>
                                <li><small><a href="#" class="card-link">Related Topic</a></small></li>