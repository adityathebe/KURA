extends profile_base

block content_middle
	h3 Account Settings
	form(class="form-horizontal" method='POST', action='/user/account')
		<div class="form-group">
			<label class="col-md-4 control-label">Username:</label>
			<div class="col-sm-6 col-md-6">
				<input class="form-control" name="username" type="text" value="" placeholder="#{user.username}" disabled>
			</div>
		</div>
		<div class="form-group">
			<label class="col-md-4 control-label">Change Email ID:</label>
			<div class="col-sm-6 col-md-6">
				<input class="form-control" name="email" type="text" placeholder="#{user.email}" disabled>
			</div>
		</div>
		<div class="form-group">
			<label class="col-md-4 control-label">Old Password:</label>
			<div class="col-sm-6 col-md-6">
				<input class="form-control" name="oldpass" type="password" placeholder="Enter old password">
			</div>
		</div>
		<div class="form-group">
			<label class="col-md-4 control-label">New Password:</label>
			<div class="col-sm-6 col-md-6">
				<input class="form-control" name="newpass" type="password" placeholder="Enter new password">
			</div>
		</div>
		<div class="form-group">
			<label class="col-md-4 control-label">Confirm Password:</label>
			<div class="col-sm-6 col-md-6">
				<input class="form-control" name="newpass_confirm" type="password" placeholder="Confirm password">
			</div>
		</div>
		<div class="form-group">
			<label class="col-md-4 control-label"></label>
			<div class="col-md-8">
				<input type="submit" class="btn btn-primary" value="Save Changes">
			</div>
		</div>
	<hr>
	<div class="form-group">
		<label class="col-md-4 control-label">Delete your account</label>
		<div class="col-md-8">
			<input type="submit" class="btn btn-danger" value="Delete Account">
		</div>
	</div>