extends layout

block content
    h1 Sign Up
    form(method='POST', action='/user/register')
        .col-md-4
            #form-group
                label User Name:
                input.form-control(name='userName', type='text' placeholder="Username")
            br
            #form-group
                label First Name:
                input.form-control(name='firstName', type='text' placeholder="First Name")
            br
            #form-group
                label Last Name:
                input.form-control(name='lastName', type='text' placeholder="Last Name")
            br
            #form-group
                label Gender:
                select.form-control(name='gender')
                    option Male
                    option Female

            br
            #form-group
                label Email:
                input.form-control(name='email', type='Email', placeholder='Email')
            br
            #form-group
                label Password:
                input.form-control(name='password', type='password' placeholder="Password")
            br
            input.btn.btn-primary(type='submit', value='Submit')

        .col-md-3
            #form-group
                label Faculty:
                select.form-control(name='faculty')
                    option Computer Science
                    option Computer Engineering
                    option Civil Engineering
                    option Electrical Engineering
            br
            .row
                .col-md-5
                    #form-group
                        label Year:
                        select.form-control(name='year')
                            option 1
                            option 2
                            option 3
                            option 4
                .col-md-5
                    #form-group
                        label Semester:
                        select.form-control(name='semester')
                            option 1
                            option 2
